# NANOREM MLM System - Environment Variables Example
# Copy this file to .env and fill in your actual values

# ===================================
# TELEGRAM BOT CONFIGURATION
# ===================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_ADMIN_ID=your-telegram-admin-id

# ===================================
# DATABASE CONFIGURATION
# ===================================
# SQLite (default for development)
DATABASE_URL=sqlite:///nanorem_mlm.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/nanorem_mlm

# ===================================
# APPLICATION SETTINGS
# ===================================
DEBUG_MODE=False
LOG_LEVEL=INFO
LOG_FILE=nanorem_mlm.log
TIMEZONE=Europe/Riga

# ===================================
# CLOUD CASH REGISTER INTEGRATION
# ===================================
# IMPORTANT: Fill these values when manufacturer provides API details

# Cash Register Provider (options: iiko, atol, taxcom, yandex, paykeeper, cloudkassa, custom)
CASH_REGISTER_PROVIDER=unknown

# API Endpoint
CASH_REGISTER_API_ENDPOINT=https://api.cashregister.example.com/v1
CASH_REGISTER_API_VERSION=1.0

# Authentication Credentials
# TODO: Get these from manufacturer
CASH_REGISTER_AUTH_TOKEN=
CASH_REGISTER_AUTH_SECRET=
CASH_REGISTER_API_KEY=

# Store/Register Information
CASH_REGISTER_STORE_ID=
CASH_REGISTER_REGISTER_ID=

# Connection Settings
CASH_REGISTER_TIMEOUT=30
CASH_REGISTER_MAX_RETRIES=3
CASH_REGISTER_RETRY_DELAY=5

# Webhook Configuration
CASH_REGISTER_WEBHOOK_SECRET=your-webhook-secret-here
CASH_REGISTER_WEBHOOK_URL=https://nanorem.example.com/webhooks/cash-register

# Feature Flags
CASH_REGISTER_ENABLE_RECEIPTS=true
CASH_REGISTER_ENABLE_SYNC=true
CASH_REGISTER_ENABLE_WEBHOOKS=true

# Sync Settings (in seconds)
CASH_REGISTER_AUTO_SYNC_INTERVAL=3600
CASH_REGISTER_SYNC_BATCH_SIZE=100

# Report Settings
CASH_REGISTER_DAILY_REPORT=true
CASH_REGISTER_DAILY_REPORT_TIME=23:00

# ===================================
# EMAIL CONFIGURATION (for notifications)
# ===================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@nanorem.com

# ===================================
# API CONFIGURATION
# ===================================
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT=10
REQUEST_TIMEOUT=30
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ===================================
# NOTES FOR MANUFACTURER INTEGRATION
# ===================================
# When manufacturer provides cloud cash register details:
# 1. Update CASH_REGISTER_PROVIDER with actual provider name
# 2. Set CASH_REGISTER_API_ENDPOINT to provided API URL
# 3. Add authentication credentials (token/key/secret)
# 4. Configure store_id and register_id if applicable
# 5. Update webhook URL to your server address
# 6. Test connection using: python main.py --test-cash-register
