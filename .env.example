# NANOREM MLM System - Environment Variables Example
# Copy this file to .env and fill in your actual values

# ====================================
# TELEGRAM BOT CONFIGURATION
# ====================================
# Get your token from BotFather in Telegram
BOT_TOKEN=your_bot_token_here

# ====================================
# DATABASE CONFIGURATION
# ====================================
# SQLite (default for development)
DATABASE_URL=sqlite:///nanorem.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/nanorem

# ====================================
# APPLICATION SETTINGS
# ====================================
APP_NAME=NANOREM MLM System
APP_VERSION=0.1.0

# Debug mode: true / false
DEBUG=false

# Logging level: DEBUG / INFO / WARNING / ERROR
LOG_LEVEL=INFO

# ====================================
# WEBHOOK CONFIGURATION (optional)
# ====================================
# For webhook mode (when deployed on a server)
# WEBHOOK_URL=https://yourdomain.com/webhook
# WEBHOOK_PORT=8443
